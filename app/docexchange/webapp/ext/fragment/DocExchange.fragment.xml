<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:macros="sap.fe.macros" displayBlock="true"
xmlns:mvc="sap.ui.core.mvc" xmlns:upload="sap.m.upload" xmlns:Button="sap.m.Button">
	<VBox id="11">
	

		 <upload:UploadSet
					id="uploadSet"
					core:require="{ handler: 'docexchange/ext/fragment/DocExchange'}"
					instantUpload="false"
					uploadEnabled="true"
					showIcons="true"
					uploadButtonInvisible="false"
					afterItemAdded="handler.onAfterItemAdded"
					uploadCompleted="handler.onUploadCompleted"
					items="{
								path: '/Files2',
								parameters: {
									$orderby: 'createdAt desc'
								},
								templateShareable: false}">
								
					<upload:toolbar>
						<OverflowToolbar id="overflow">

							<ToolbarSpacer id="toolspacer"/>
								<Button id="manageDocon" text="Manage Document" press="handler.onManageDocumentPress" />
							<upload:UploadSetToolbarPlaceholder id="ooo" />

						</OverflowToolbar>
					
					</upload:toolbar>


					<upload:items>
						<upload:UploadSetItem
						id="ddd"
							fileName="{fileName}"
							mediaType="{mediaType}"
							url="{url}"
							thumbnailUrl="{
								path: 'mediaType',
								formatter: 'handler.formatThumbnailUrl'
							}"
							enabledEdit="true"
							visibleEdit="true"
							visibleRemove="true"
							openPressed="handler.onOpenPressed"
							removePressed="handler.onRemovePressed">
							<upload:attributes>
								<ObjectAttribute
								id="dd"
									title="Uploaded By"
									text="{createdBy}"
									active="false"
								/>
								<ObjectAttribute
								id="dd22"
									title="Uploaded on"
									text="{createdAt}"
									active="false"
								/>
								<ObjectAttribute
								id="dddw2"

									title="File Type"
									text="{mediaType}"
									active="false"
								/>
								<ObjectAttribute
								id="dd22a"
									title="File Size"
									text="{size}"
									active="false"
								/>
							</upload:attributes>
						</upload:UploadSetItem>
					</upload:items>
				</upload:UploadSet>
	</VBox>
</core:FragmentDefinition>