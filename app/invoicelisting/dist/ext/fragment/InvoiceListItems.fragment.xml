<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:macros="sap.fe.macros">
	<VBox>
                                            <Table id= "table_line" selectionChange="onRowSelected" mode="None" items="{
                                                                path: '/POLineItems' 
                                                                }">
                                                <columns>
                                                    <Column>
                                                        <Text text="Item No" />
                                                    </Column>
                                                    <Column  width="8rem">
                                                        <Text text="Item Description" />
                                                    </Column>
                                                    <Column  width="10rem">
                                                        <Text text="Item Description Condition" />
                                                    </Column>
                                                    <Column>
                                                        <Text text="Plant" />
                                                    </Column>
                                                    <Column>
                                                        <Text text="Unit Price"/>
                                                    </Column>
                                                    <Column>
                                                        <Text text="Quantity"/>
                                                    </Column>
                                                    <Column>
                                                        <Text text="CGST %" />
                                                    </Column>
                                                    <Column>
                                                        <Text text="SGST %" />
                                                    </Column>
                                                    <Column>
                                                        <Text text="CGST Value" />
                                                    </Column>
                                                    <Column>
                                                        <Text text="SGST Value" />
                                                    </Column>
													 <Column>
                                                        <Text text="Amount" />
                                                    </Column>
                                                   
                                                  
                                                   
                                                </columns>
                                                <items>
                                                    <ColumnListItem>
                                                        <cells>
                                                            <Text text="{itemNo}" />
                                                            <Text text="{itemDesc}"/>
                                                            <Text text="{itemCondDesc}" />
                                                            <Text text="{plant}" />
                                                            <Text text="{unitPrice}" />
                                                            <Text text="{lineItemQuant_static}" />
                                                            <Text text="{CgstPercent}" />
                                                            <Text text="{sgstPercent}" />
                                                            <Text text="{cgstValue_static}" />
                                                            <Text text="{sgstValue_static}" />                                                        
                                                            <Text text="{amount}" />                                                        
                                                        </cells>

                                                    </ColumnListItem>
                                                </items>
                                            </Table>
                                        </VBox>
</core:FragmentDefinition>